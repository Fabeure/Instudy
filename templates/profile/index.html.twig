

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title> Profile {{ app.user.username }} </title>
    <meta
            content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
            name="viewport"
    />
    <link
            href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900"
            rel="stylesheet"
    />
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
            crossorigin="anonymous"
    />
    <link
            rel="stylesheet"
            href="{{ asset('assets/css/sitecomponents.css') }}"
    />
    <link rel="stylesheet" href="{{ asset('assets/css/img.css') }}" />
    <link
            rel="stylesheet"
            type="text/css"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
            rel="stylesheet"
            type="text/css"
            href="{{ asset('assets/css/style_interface_settings.css') }}"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /*to align tags */
        .inline {
            display: inline-block;
        }
    /*to change the color of the btn */
        .btn-secondary, .btn-secondary:active, .btn-secondary:visited {
            background-color: #32225c !important;
            border-color: #1f1f42;
        }
        .btn-secondary:hover {
            transition: all 30ms ease;
            -webkit-transition:all 30ms ease;
            -moz-transition: all 30ms ease;
            -o-transition: all 30ms ease;
            -ms-transition: all 30ms ease;
            transform: scale(1.1);
        }
    /*tabulation de donn√©es*/
        .tab {
            display: inline-block;
            margin-left: 40px;
        }
        </style>
</head>
<body>
<header class="main-header clearfix" role="banner">
    <div class="logo">
        <img class="imgv2" src="{{ asset('assets/images/download.png') }}" alt="INSAT 2.0" />
    </div>
    <a href="#menu" class="menu-link"><i class="fa fa-bars"></i></a>
    <nav id="menu" class="main-nav" role="navigation">
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger d-inline-block">
                {{ flash_message }}
            </div>
        {% endfor %}
        <ul class="main-menu">
            <li><a href="#">Home</a></li>
            <li><a href="#">Hub</a></li>
            {% if app.user %}
                <li>  <a href="{{ path('app_profile_settings') }}"> {{ app.user.username }} </a> </li>
                <li><a href="{{ path('app_logout') }}">Logout</a></li>
            {% endif %}
        </ul>
    </nav>
</header>
<section class="py-5 my-5">
    <div class="container">
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flash_message }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-md-10">
                <h1 class="mb-5">{{ app.user.username }}'s account</h1>
            </div>
            <div class="col-md-2">
                   {%  if( app.user.allNotNull ) %}
                    <button  class="btn btn-secondary" onclick="location.href='{{ path('app_profile_settings') }}';"> edit profile </button>
                    {% endif %}
            </div>
        </div>
        <div class="row justify-content-around">
            <div class="col-md-3">

                    <img src="{{ asset('assets/images/profileDefaultPhoto.jpg') }}" alt="Profile Image" class="rounded-circle shadow rounded-lg d-block d-sm-flex" width="236" height="236" />
           <br>
                <div class="text-center">
                    {{ app.user.bio }}
                </div>
            </div>
            <div class="col-md-5">
                <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                    <div class="tab-content p-4 p-md-5" >
                        <div class="tab-pane fade show active">
                            {% if(app.user.surname != '') %}
                            <div class="mb-3">
                                <h3 class="tab" > {{ app.user.surname }} </h3>
                            </div>
                            <br>
                            {% endif %}
                            {% if(app.user.phone != '') %}
                            <div class="mb-3">
                                phone number:
                                <br>
                                <div class="tab">
                                <i class="fa fa-phone"></i>
                                {{ app.user.phone }}
                                </div>
                            </div>
                            {% endif %}
                            <br>
                            <div class="mb-3">
                                email address :
                                <br>
                                <div class="tab">
                                    <i class="fa fa-envelope"></i>
                                    {{ app.user.email }}
                                </div>
                                <br>
                                {% if(app.user.personalEmail != '') %}
                                <div class="tab">
                                <i class="fa fa-envelope"></i>
                                {{ app.user.personalEmail }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if(not(app.user.allNotNull)) %}
        <div class="row">
            <div class="alert alert-danger col-md-4">
                <i class="fas fa-exclamation-triangle text-danger"></i>
                <strong>
                    Please  finish <a href='{{ path('app_profile_settings') }}' class="alert-link">sitting your account </a>
                </strong>.
            </div>

        </div>
        {% endif %}
    </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"
></script>

<!--
    <script src="{{ asset('assets/js/interface.js') }}"></script>
    -->

<script src="{{ asset('assets/js/destroySession.js') }}"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>

{% endblock %}
