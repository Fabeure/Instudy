{% extends "base2.html.twig" %}





{% block title %}TEST GPT!{% endblock %}

{% block body %}


    <div class="container">


        <div class="header">

            <h1 class="title">Small Chat GPT</h1>



            <span class="question" id="question">{{text}}</span>
        </div>

        <div class="gpt-response">



            <span {{ stimulus_controller('symfony/ux-typed', {
                strings: [text],
                smartBackspace: true,
                startDelay: 100,
                backSpeed: 20,
                backDelay: 100,
                loop: false,
                showCursor: true,
                cursorChar: 'âœ¨'
            }) }} class="stream"></span>
        </div>

        <div class="type">

            <div class="input-div">

                <form action="{{path('send_chat')}}" method="post">
                    <div class="text-input">

                        <input type="text" name="text"  id="text"  placeholder="" class="text">

                    </div>

                    <button type="submit" class="btn">

                    </button>

                </form>



            </div>





        </div>




    </div>

{% endblock %}