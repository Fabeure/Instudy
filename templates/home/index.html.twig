    <script>
        function RightImg() {
            const image1 = "url(\"http://127.0.0.1:8000/assets/images/th%20(1).jpg\")";
            const image2 = "url(\"http://127.0.0.1:8000/assets/images/th%20(2).jpg\")";
            const image3 = "url(\"http://127.0.0.1:8000/assets/images/th%20(3).jpg\")";

            var ImgElem = document.getElementById("img");
            var image = getComputedStyle(ImgElem).backgroundImage;

            if (image === image1) {
                changeText(image2);
            } else if (image === image2) {
                changeText(image3);
            } else if (image === image3) {
                changeText(image1);
            } else {
                changeText(image1);
            }
        }

        function LeftImg() {
            const image1 = "url(\"http://127.0.0.1:8000/assets/images/th%20(1).jpg\")";
            const image2 = "url(\"http://127.0.0.1:8000/assets/images/th%20(2).jpg\")";
            const image3 = "url(\"http://127.0.0.1:8000/assets/images/th%20(3).jpg\")";

            var ImgElem = document.getElementById("img");
            var image = getComputedStyle(ImgElem).backgroundImage;

            if (image === image1) {
                changeText(image3);
            } else if (image === image2) {
                changeText(image1);
            } else if (image === image3) {
                changeText(image2);
            } else {
                changeText(image1);
            }
        }

        function changeText(imageX) {
            var Elem = document.getElementById("img");
            Elem.style.backgroundImage = imageX;
        }

    </script>

