{% extends "base.html.twig" %}


{% block title %}Contact{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/RegisterTermsContact.css') }}" />
{% endblock %}
{% block body %}

    {%  block header %} {{ parent() }}
        {% block errors %}{% endblock %}
    {% endblock %}

    {% block section1 %}
        <section class="section main-banner" id="top" data-section="section1"  style="color:white">
    {% endblock %}
    <section class="section coming-soon caption" data-section="section3">
        <div class="col-md-12 mt-5">
            <div class="top-content">
                <h2>Contact Us</h2>
                {{ form_start(form) }}

                    {% if not app.user %}
                        <div class="form-group">
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        {{ form_row(form.subject, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
    {% block section2 %}
        </section>
    {% endblock %}
{% endblock %}
