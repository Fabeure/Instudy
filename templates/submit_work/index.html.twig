{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    {{ parent() }}
    <link href="{{ asset('assets/css/SubmitWork.css') }}" rel="stylesheet">
{% endblock  %}
{% block title %}submit your work {% endblock %}
{% block jsdelivr %} {% endblock %}
{% block body %}
    {%  block header %} {{ parent() }}
        {% block errors %} {% endblock %}
    {% endblock %}
    <div class="container px-4">
        <!-- go back btn -->
        <div class="row">
            <div class="col-md-2">
                    <button  class="btn btn-secondary" onclick="location.href='{{ path('app_hub') }}';"> go back to Hub </button>
            </div>
        </div> <br><br>

        <!--if you have homework -->
        {% if(true) %}
        <div class="row gx-5">

            <!--homework list -->
            <div class="col-6 col-md-4">
                <div class="shadow-sm p-3 mb-5 bg-body rounded">
                    <h2> yours homework : </h2>
                    <ol class="list-group list-group-numbered">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Algebre</div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                                serie 1
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">conception</div>
                                td 3
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">reseau </div>
                                compte rendu
                            </div>
                        </li>
                    </ol>
                </div>
            </div>

            <!--form to submit homework -->
            <div class="col-sm-6 col-md-8">
                <div class="shadow-sm p-3 mb-5 bg-body rounded">
                    <div class="col-auto">
                        <label for="autoSizingSelect" class="form-label">subject : </label>
                        <select class="form-select" id="autoSizingSelect">
                            <option selected>Choose subject</option>
                            <option value="1">Algebre</option>
                            <option value="2">conception</option>
                            <option value="3">reseau</option>
                        </select>
                    </div>
                    <br>
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">select the file : </label>
                        <input class="form-control" type="file" id="formFileMultiple" multiple>
                    </div>
                    <br>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">add comments</label>
                    </div>
                    <br>
                    <button type="button" class="btn btn-secondary btn-sm">submit homework</button>
                </div>
            </div>
        </div>

            <!-- if there isn't any homework -->
    {% else %}
        <h1> there's no homework !</h1>
        Congratulations on having a homework-free day! This is a wonderful opportunity to take a breath and enjoy a moment of freedom from academic responsibilities. Embrace this time to engage in activities that inspire and energize you :)
    {% endif %}
    </div>

{% endblock %}
