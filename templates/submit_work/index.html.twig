{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    {{ parent() }}
    <link href="{{ asset('assets/css/SubmitWork.css') }}" rel="stylesheet">
{% endblock  %}
{% block title %}submit your work {% endblock %}
{% block jsdelivr %} {% endblock %}
{% block body %}
    {%  block header %} {{ parent() }}
        {% block errors %} {% endblock %}
    {% endblock %}
    <div class="container px-4">

        <!--if you have homework -->
        <div class="row gx-5">
            <!--homework list -->
            <div class="col-6 col-md-4">
                <div class="shadow-sm p-3 mb-5 bg-body rounded">
                    <h2> yours homework : </h2>
                    <ol class="list-group list-group-numbered">
                        {% if homeworks %}
                        {% for homework in homeworks %}
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">{{ homework.matiere }}</div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                                <a href="#"> {{ homework.commentaire }} </a>
                            </div>
                        </li>
                        {% endfor %}
                    </ol>
                </div>
            </div>

            <!--form to submit homework -->
            <div class="col-sm-6 col-md-8">
                <div class="shadow-sm p-3 mb-5 bg-body rounded">
                    <div class="col-auto">
                        {{ form_start(HomeworkForm) }}
                        {{ form_row(HomeworkForm.teacher) }}
                    </div>
                    <br>
                    <div class="mb-3">
                        {{ form_row(HomeworkForm.homeworkFile) }}
                    </div>
                    <br>
                    <div class="form-floating">
                        {{ form_row(HomeworkForm.commentaire) }}
                    </div>
                    <br>
                    <button type="submit" class="btn btn-secondary btn-sm">submit homework</button>
                    {{ form_end(HomeworkForm) }}
                </div>
            </div>
        </div>

            <!-- if there isn't any homework -->
    {% else %}
        <h1> there's no homework !</h1>
        Congratulations on having a homework-free day! This is a wonderful opportunity to take a breath and enjoy a moment of freedom from academic responsibilities. Embrace this time to engage in activities that inspire and energize you :)
    {% endif %}
    </div>

{% endblock %}
