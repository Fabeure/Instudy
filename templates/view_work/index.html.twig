{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    {{ parent() }}
    <link href="{{ asset('assets/css/SubmitWork.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}view your work {% endblock %}
{% block jsdelivr %} {% endblock %}
{% block body %}
    {% block header %} {{ parent() }}
        {% block errors %} {% endblock %}
    {% endblock %}
    <div class="container px-4">

        <div class="row gx-5">
            <!--view homework list -->
            <div class="col-md-3">
                <div class="shadow-sm p-3 mb-5 bg-body rounded">
                    <h3> view your homeworks : </h3>
                    <div
                            class="nav flex-column nav-pills"
                            id="v-pills-tab"
                            role="tablist"
                            aria-orientation="vertical"
                    >
                        <br>
                        <!--if there's some submitted answer -->
                        {% for homework in homeworks %}
                            <a
                                    class="nav-link"
                                    id="password-tab"
                                    data-toggle="pill"
                                    href="#{{ homework.homeworkName }}"
                                    role="tab"
                                    aria-controls="password"
                                    aria-selected="false"
                                    style="text-decoration: none; color:black;"
                            >
                                <i class="fa fa-home text-center mr-1"></i>
                                {{ homework.matiere }}
                            </a>
                            <br>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!--homework content  -->
            <div class="col-sm-6 col-md-8">
                <div class="shadow-sm p-3 mb-5 bg-body rounded">
                    <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                        {% for homework in homeworks %}

                            <!-- set url = vich_uploader_asset(homework.homeworkName, 'homeworkFile') -->
                            <div
                                    class="tab-pane fade "
                                    id="{{ homework.homeworkName }}"
                                    role="tabpanel"
                                    aria-labelledby="password-tab"
                            >
                                <!--the content of your answer  -->
                                <div>
                                    <object data="{{ asset('assets/files/course_files/exam2021-64586a58bcef6741189300.pdf') }}"
                                            type="application/pdf" width="100%" height="500px">
                                        <p>It appears your Web browser is not configured to display PDF files.
                                            No worries, just <a href="{{ asset('assets/pdf/test.pdf') }}">click here to
                                                download the PDF file.</a>
                                        </p>
                                    </object>

                                </div>
                                <br><br>

                                {% if (homework.grade != null) %}
                                    <h6> your grade : </h6>
                                    {{ homework.grade }}
                                {% else %}
                                    no grade accorded to this homework yet
                                {% endif %}
                                <br>

                                {% if (homework.commentaire != null) %}
                                    <h6> teacher comments : </h6>
                                    {{ homework.commentaire }}
                                    <br>
                                {% endif %}

                            </div>

                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

