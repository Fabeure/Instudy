
{% extends "base.html.twig" %}

{% block title %}Hello ProfileController!{% endblock %}
{% block body %}
    {%  block header %} {{ parent() }}
        {% block errors %} {% endblock %}
    {% endblock %}

    {% set url = vich_uploader_asset(cours, 'courseFile') %}
<section class="py-5 my-5" style="color:white; background-image: url({{ asset('assets/images/choosing-bg.jpg') }}); ">
    <div class="container">

        {# course title #}
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Course : {{ cours.nom }}</h1>
            </div>
        </div>

        {# course pdf preview #}
        <div>
            <object data="{{ asset(url) }}"  type="application/pdf" width="100%" height="500px">
                <p>It appears your Web browser is not configured to display PDF files.
                    No worries, just <a href="{{ asset(url) }}">click here to download the PDF file.</a>
                </p>
            </object>
            <script>
                function getSelectedText() {
                    var selection = window.getSelection();
                    var selectedText = selection.toString();
                    alert('Selected text: ' + selectedText);
                }
                document.addEventListener('mouseup', getSelectedText);
            </script>
        </div>
        {# action buttons #}
        <div class="d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-secondary" type="button">show CheatSheet</button>
            <button class="btn btn-info" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" data-backdrop="static">Send a question</button>


            {# Modal #}
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
                <div class="modal-dialog" >
                    <div class="modal-content" style="color:white; background-image: url({{ asset('assets/images/choosing-bg.jpg') }});" >
                    <div class="modal-header" >
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Ask your question</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        {# input #}
                        <div class="mb-3">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a type="button" class="btn btn-outline-warning btn-sm " data-bs-dismiss="modal">Send</a>
                        </div>
                    </div>               
                </div>
            </div>
            {# end of Modal #}
        </div>

        {# course Q&A #}
        <div class="my-4">
            <div class="card my-1" width="500px">
                <div class="card-header">
                    the question is here
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                    <p>the answer response is here</p>
                    </blockquote>
                </div>
            </div>

            <div class="card my-1">
